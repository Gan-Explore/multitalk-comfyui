FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /opt/app

# --------------------------------------------------
# System dependencies
# --------------------------------------------------
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    ffmpeg \
    libsndfile1 \
    libgl1 \
    libglib2.0-0 \
    python3.10 \
    python3.10-venv \
    python3-pip \
 && rm -rf /var/lib/apt/lists/*

# --------------------------------------------------
# Python virtual environment
# --------------------------------------------------
RUN python3.10 -m venv /opt/app/.venv
RUN /opt/app/.venv/bin/python -m pip install --upgrade pip

# --------------------------------------------------
# ðŸ”’ CORE FOUNDATION (LOCKED)
# --------------------------------------------------
# PyTorch â‰¥ 2.3 required by modern ComfyUI
# NumPy MUST stay < 2.0
RUN /opt/app/.venv/bin/pip install --no-cache-dir \
    --extra-index-url https://download.pytorch.org/whl/cu121 \
    torch==2.4.0+cu121 \
    torchvision==0.19.0+cu121 \
    torchaudio==2.4.0+cu121

# --------------------------------------------------
# Clone ComfyUI (static snapshot at build time)
# --------------------------------------------------
WORKDIR /opt/app
RUN git clone https://github.com/comfyanonymous/ComfyUI.git

# --------------------------------------------------
# ðŸ”‘ Install ComfyUI-declared runtime dependencies
# (DB, web server, assets, migrations, etc.)
# --------------------------------------------------
RUN /opt/app/.venv/bin/pip install --no-cache-dir \
    -r /opt/app/ComfyUI/requirements.txt

# --------------------------------------------------
# Additional helpers (CI-safe, no native compile)
# --------------------------------------------------
RUN /opt/app/.venv/bin/pip install --no-cache-dir \
    opencv-python-headless==4.9.0.80 \
    pillow==10.3.0 \
    soundfile==0.12.1 \
    httpx==0.27.0

# --------------------------------------------------
# ComfyUI frontend (real, existing version)
# --------------------------------------------------
RUN /opt/app/.venv/bin/pip install --no-cache-dir \
    comfyui-frontend-package==1.39.6

WORKDIR /opt/app
