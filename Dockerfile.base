FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /workspace

# --------------------------------------------------
# System dependencies
# --------------------------------------------------
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    ffmpeg \
    libgl1 \
    libglib2.0-0 \
    python3.10 \
    python3.10-venv \
    python3-pip \
 && rm -rf /var/lib/apt/lists/*

# --------------------------------------------------
# Create venv (EXPLICIT)
# --------------------------------------------------
RUN python3.10 -m venv /workspace/.venv

# --------------------------------------------------
# Upgrade pip INSIDE venv (CRITICAL)
# --------------------------------------------------
RUN /workspace/.venv/bin/python -m pip install --upgrade pip

# --------------------------------------------------
# Install Python deps INTO venv (CRITICAL)
# --------------------------------------------------
COPY requirements.lock /workspace/requirements.lock

RUN /workspace/.venv/bin/pip install --no-cache-dir \
      --extra-index-url https://download.pytorch.org/whl/cu121 \
      -r /workspace/requirements.lock

# --------------------------------------------------
# ComfyUI (PINNED)
# --------------------------------------------------
RUN git clone --branch v0.3.28 --depth 1 https://github.com/comfyanonymous/ComfyUI.git

# --------------------------------------------------
# WanVideoWrapper (includes InfiniteTalk + MultiTalk)
# --------------------------------------------------
WORKDIR /workspace/ComfyUI

RUN mkdir -p custom_nodes && \
    cd custom_nodes && \
    git clone https://github.com/kijai/ComfyUI-WanVideoWrapper.git && \
    cd ComfyUI-WanVideoWrapper && \
    git checkout 3d7801cee4c8e3106078dd9b9f146caee95069ba

WORKDIR /workspace/ComfyUI
