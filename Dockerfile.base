FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04

ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /opt/app

# --------------------------------------------------
# System dependencies
# --------------------------------------------------
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    ffmpeg \
    libgl1 \
    libglib2.0-0 \
    python3.10 \
    python3.10-venv \
    python3-pip \
 && rm -rf /var/lib/apt/lists/*

# --------------------------------------------------
# Python virtual environment
# --------------------------------------------------
RUN python3.10 -m venv /opt/app/.venv

RUN /opt/app/.venv/bin/python -m pip install --upgrade pip

# --------------------------------------------------
# Python dependencies
# --------------------------------------------------
COPY requirements.lock /opt/app/requirements.lock

RUN /opt/app/.venv/bin/pip install \
      --extra-index-url https://download.pytorch.org/whl/cu121 \
      -r /opt/app/requirements.lock \
      -v

# --------------------------------------------------
# ComfyUI
# --------------------------------------------------
RUN git clone --branch v0.3.28 --depth 1 https://github.com/comfyanonymous/ComfyUI.git

# --------------------------------------------------
# WanVideoWrapper
# --------------------------------------------------
WORKDIR /opt/app/ComfyUI

RUN mkdir -p custom_nodes && \
    cd custom_nodes && \
    git clone https://github.com/kijai/ComfyUI-WanVideoWrapper.git && \
    cd ComfyUI-WanVideoWrapper && \
    git checkout 3d7801cee4c8e3106078dd9b9f146caee95069ba
