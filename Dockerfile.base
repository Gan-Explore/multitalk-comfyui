FROM nvidia/cuda:12.1.1-cudnn8-runtime-ubuntu22.04
# --------------------------------------------------
# Environment
# --------------------------------------------------
ENV DEBIAN_FRONTEND=noninteractive
WORKDIR /opt/app

# --------------------------------------------------
# System dependencies
# --------------------------------------------------
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    ffmpeg \
    libsndfile1 \
    libgl1 \
    libglib2.0-0 \
    python3.10 \
    python3.10-venv \
    python3-pip \
 && rm -rf /var/lib/apt/lists/*

# --------------------------------------------------
# Python virtual environment
# --------------------------------------------------
RUN python3.10 -m venv /opt/app/.venv
RUN /opt/app/.venv/bin/python -m pip install --upgrade pip

# --------------------------------------------------
# ðŸ”’ Core foundation (LOCKED, ComfyUI-compatible)
# --------------------------------------------------
# - PyTorch >= 2.4 required
# - NumPy MUST remain < 2.0
# - CUDA 12.1 wheels
RUN /opt/app/.venv/bin/pip install --no-cache-dir \
    --extra-index-url https://download.pytorch.org/whl/cu121 \
    torch==2.4.0+cu121 \
    torchvision==0.19.0+cu121 \
    torchaudio==2.4.0+cu121 \
    numpy==1.26.4 \
    scipy==1.11.4

# --------------------------------------------------
# Clone & PIN ComfyUI (STABLE TAG, NOT NIGHTLY)
# --------------------------------------------------
WORKDIR /opt/app
RUN git clone --depth 1 --branch v0.3.5 \
    https://github.com/comfyanonymous/ComfyUI.git

# --------------------------------------------------
# Install ComfyUI-declared runtime dependencies
# (DB, web server, assets, migrations, etc.)
# --------------------------------------------------
RUN /opt/app/.venv/bin/pip install --no-cache-dir \
    -r /opt/app/ComfyUI/requirements.txt

# --------------------------------------------------
# Additional helpers (safe, commonly needed)
# --------------------------------------------------
RUN /opt/app/.venv/bin/pip install --no-cache-dir \
    opencv-python-headless==4.9.0.80 \
    pillow==10.3.0 \
    soundfile==0.12.1 \
    httpx==0.27.0

# --------------------------------------------------
# ComfyUI frontend package (stable, existing)
# --------------------------------------------------
RUN /opt/app/.venv/bin/pip install --no-cache-dir \
    comfyui-frontend-package==1.39.6

# --------------------------------------------------
# Final workdir
# --------------------------------------------------
WORKDIR /opt/app
